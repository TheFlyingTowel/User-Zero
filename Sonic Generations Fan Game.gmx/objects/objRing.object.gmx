//Ring loss
if (Motion==true) {

// Apply X Motion
x += Speed;

// Unstuck and bounce if it collides with the walls
if ((Speed&gt;0 || Speed&lt;0) &amp;&amp;
( place_meeting(x, y, objParentTerrain) ||
place_meeting(x, y, objParentTerrainLayer0) ||
place_meeting(x, y, objParentTerrainLayer1) ||
place_meeting(x, y, objParentPlatform) )) {
// Unstick from the wall
x -= Speed;
// Bounce, losening strenght
Speed = -Speed * 0.8;
}

// Apply Y Motion
y += Gravity;

// Unstuck and bounce if it collides with the walls
if ((Gravity&gt;0 || Gravity&lt;0) &amp;&amp;
( place_meeting(x, y, objParentTerrain) ||
place_meeting(x, y, objParentTerrainLayer0) ||
place_meeting(x, y, objParentTerrainLayer1) ||
place_meeting(x, y, objParentPlatform) )) {
// Unstick from the wall
y -= Gravity;
// Bounce, losening strenght
Gravity = -Gravity * 0.8;
}

// Apply gravity force
Gravity += GravityForce;

if (Timer &gt; 0) Timer -= 1;
if (Timer == 0) instance_destroy ();
}
